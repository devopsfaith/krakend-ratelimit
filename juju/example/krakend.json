{
    "version": 2,
    "name": "TV shows gateway",
    "port": 8080,
    "cache_ttl": "3600s",
    "timeout": "3s",
    "endpoints": [
        {
            "endpoint": "/showrss/{id}",
            "headers_to_pass": [
                "x-user",
                "x-tier"
            ],
            "backend": [
                {
                    "host": [
                        "http://showrss.info/"
                    ],
                    "url_pattern": "/user/schedule/{id}.rss",
                    "encoding": "rss",
                    "extra_config": {
                        "github.com/devopsfaith/krakend-ratelimit/juju/proxy": {
                            "maxRate": 1,
                            "capacity": 1
                        }
                    }
                },
                {
                    "host": [
                        "http://showrss.info/"
                    ],
                    "url_pattern": "/user/{id}.rss",
                    "encoding": "rss",
                    "extra_config": {
                        "github.com/devopsfaith/krakend-ratelimit/juju/proxy": {
                            "maxRate": 2,
                            "capacity": 2
                        }
                    }
                }
            ],
            "extra_config": {
                "github.com/devopsfaith/krakend-ratelimit/juju/router": {
                    "tierConfiguration": {
                        "headerTier": "x-tier",
                        "strategy": "header",
                        "key": "x-user",
                        "duration": "1m",
                        "tiers": [
                            {
                                "name": "unlimited",
                                "limit": 0
                            },
                            {
                                "name": "gold",
                                "limit": 50
                            },
                            {
                                "name": "silver",
                                "limit": 20
                            },
                            {
                                "name": "bronze",
                                "limit": 5
                            }
                        ]
                    },
                    "maxRate": 50,
                    "clientMaxRate": 5,
                    "strategy": "ip"
                }
            }
        }
    ]
}
